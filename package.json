{
  "name": "@wppconnect-team/wppconnect",
  "version": "1.37.5",
  "description": "WPPConnect WhatsApp Agent System",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:watch": "concurrently \"npm run build:wapi -- --mode=development -w\" \"ts-node-dev --respawn --transpile-only src/server.ts\"",
    "build:client": "tsc",
    "build:wapi": "cd src/lib/wapi/ && webpack",
    "build": "npm run build:wapi && npm run build:client",
    "start": "node --expose-gc --max-old-space-size=1536 dist/server.js",
    "clean": "shx rm -rf dist",
    "lint": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "type-check": "tsc --noEmit",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "migrate": "node src/config/migrations.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wppconnect-team/wppconnect.git"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "api",
    "typescript"
  ],
  "author": "wppconnect-team",
  "license": "LGPL-3.0-or-later",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/eslint-parser": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/bcrypt": "^5.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.0",
    "@types/supertest": "^2.0.12",
    "@types/tmp": "^0.2.3",
    "@types/uuid": "^9.0.2",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "ajv": "^8.17.1",
    "ajv-keywords": "^5.1.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.0",
    "eslint": "^8.48.0",
    "jest": "^29.5.0",
    "mocha": "^10.2.0",
    "prettier": "^3.0.3",
    "shx": "^0.3.4",
    "socket.io-client": "^4.7.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@wppconnect-team/wppconnect": "^1.37.5",
    "@wppconnect/wa-js": "^3.3.0",
    "@wppconnect/wa-version": "^1.0.73",
    "atob": "^2.1.2",
    "axios": "^1.5.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^12.4.1",
    "body-parser": "^1.20.2",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "chrome-launcher": "^0.15.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "execa": "^5.1.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "file-type": "^21.0.0",
    "futoin-hkdf": "^1.5.3",
    "helmet": "^7.0.0",
    "joi": "^17.10.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "latest-version": "^7.0.0",
    "lookpath": "^1.2.2",
    "mime-types": "^2.1.35",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "puppeteer": "^21.3.8",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "qrcode-terminal": "^0.12.0",
    "regenerator-runtime": "^0.14.1",
    "rimraf": "^5.0.1",
    "sanitize-filename": "^1.6.3",
    "sharp": "^0.34.4",
    "socket.io": "^4.7.2",
    "tmp": "^0.2.1",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "ws": "^8.14.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/lib/**",
      "!src/tests/**",
      "!src/server.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.ts"
    ],
    "testTimeout": 30000
  }
}
